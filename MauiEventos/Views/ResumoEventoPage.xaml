<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiEventos.Views.ResumoEventoPage"
             Title="Resumo do Evento">

    <VerticalStackLayout Padding="20" Spacing="12">

        <Label Text="Resumo do Evento" FontSize="24" />

        <Label Text="{Binding Nome}" FontAttributes="Bold" FontSize="18"/>

        <Label Text="{Binding Local}" />

        <Label Text="Datas:" FontAttributes="Bold" />
        <Label Text="{Binding DataInicio}" />
        <Label Text="{Binding DataFim}" />

        <Label Text="Duração:" FontAttributes="Bold" />
        <Label Text="{Binding DuracaoDias}" />

        <Label Text="Participantes:" FontAttributes="Bold" />
        <Label Text="{Binding NumeroParticipantes}" />

        <Label Text="Custo Total:" FontAttributes="Bold" />
        <Label Text="{Binding CustoTotal, StringFormat='R$ {0:F2}'}" />

    </VerticalStackLayout>
</ContentPage>
