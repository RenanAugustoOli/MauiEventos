             x:Class="MauiEventos.Views.CadastroEventoPage"
             Title="Cadastro de Evento">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="14">

            <Entry Placeholder="Nome do evento" x:Name="txtNome" />

            <DatePicker x:Name="dtInicio" />

            <DatePicker x:Name="dtFim" />

            <Entry Placeholder="NÃºmero de participantes" Keyboard="Numeric" x:Name="txtParticipantes"/>

            <Entry Placeholder="Local do evento" x:Name="txtLocal"/>

            <Entry Placeholder="Custo por participante" Keyboard="Numeric" x:Name="txtCusto"/>

            <Button Text="Cadastrar" Clicked="Cadastrar_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
