<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiEventos.Views.CadastroEventoPage"
             Title="Cadastro de Evento"
             BackgroundColor="#F2F4F7">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Padding="20"
                   HasShadow="True">

                <VerticalStackLayout Spacing="18">

                    <Label Text="Cadastro de Evento"
                           FontSize="26"
                           HorizontalOptions="Center"
                           TextColor="#1A2A4A"
                           FontAttributes="Bold" />

                    <Entry Placeholder="Nome do Evento"
                           TextColor="#1A2A4A"
                           PlaceholderColor="#8A8A8A"
                           Text="{Binding Nome}"
                           BackgroundColor="#E8EDF3"
                           HeightRequest="45"
                            />

                    <VerticalStackLayout>
                        <Label Text="Data de Início"
                               TextColor="#1A2A4A"
                               FontAttributes="Bold"/>
                        <DatePicker Date="{Binding DataInicio}"
                                    BackgroundColor="#E8EDF3"
                                    TextColor="#1A2A4A"
                                    HeightRequest="45"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Data de Término"
                               TextColor="#1A2A4A"
                               FontAttributes="Bold"/>
                        <DatePicker Date="{Binding DataFim}"
                                    BackgroundColor="#E8EDF3"
                                    TextColor="#1A2A4A"
                                    HeightRequest="45"/>
                    </VerticalStackLayout>

                    <Entry Placeholder="Número de Participantes"
                           Keyboard="Numeric"
                           TextColor="#1A2A4A"
                           PlaceholderColor="#8A8A8A"
                           Text="{Binding NumeroParticipantes}"
                           BackgroundColor="#E8EDF3"
                           HeightRequest="45"
                            />

                    <Entry Placeholder="Local do Evento"
                           TextColor="#1A2A4A"
                           PlaceholderColor="#8A8A8A"
                           Text="{Binding Local}"
                           BackgroundColor="#E8EDF3"
                           HeightRequest="45"
                          />

                    <Entry Placeholder="Custo por Participante"
                           Keyboard="Numeric"
                           TextColor="#1A2A4A"
                           PlaceholderColor="#8A8A8A"
                           Text="{Binding CustoPorParticipante}"
                           BackgroundColor="#E8EDF3"
                           HeightRequest="45"
                           />

                    <Button Text="Cadastrar"
                            BackgroundColor="#1A73E8"
                            TextColor="White"
                            CornerRadius="12"
                            HeightRequest="50"
                            FontAttributes="Bold"
                            Clicked="OnCadastrarClicked" />

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
